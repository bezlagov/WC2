<Window x:Class="LoggerForWorkCatalog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoggerForWorkCatalog"
        mc:Ignorable="d"
        Title="Logger" Height="150" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <Label Name="lblStatus" Content="Status" HorizontalAlignment="Right" Foreground="Blue" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <CheckBox Name="chkFile" Content="To File" Margin="10 10 0 10" />
            <CheckBox Name="chkDatabase" Content="To Database" Margin="10 10 0 10" />
            <CheckBox Name="chkAll" Content="To All"  Margin="10 10 0 10" />
        </StackPanel>
        <StackPanel>
            <Button Content="Start Logging" Margin="50 20" Click="Button_Click" />
        </StackPanel>
    </StackPanel>
</Window>
